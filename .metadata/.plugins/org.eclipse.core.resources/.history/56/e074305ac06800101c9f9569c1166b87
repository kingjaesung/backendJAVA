$("#scoreBtn").on("click", function(e){
	const scoreInput = $("#scoreInput");
	const scoreForm = $("#scoreForm");
	e.preventDefault();
	
	
	const petton = /^(100|[1-9][0-9]?|0)$/;
	
	$("#scoreInput").on("input",function(){
			if(!petton.test(scoreInput.val())){
				alert("0~100 이내의 숫자만 입력하세요");
				return;
			};
	});
	
		$.ajax({
		url:"/scriptTag/jsp/score2.jsp",
		method : "post",
		data : scoreForm.serialize(),
		dataType : "text"
	}).done(function (data) {
		console.log(data);
		$("#gradeInput").val(data);
	}).fail(function(xhr,status) {
		console.log("AJAX 문제");
		alert(status + "발생.\n상태: "+ xhr.status);
	});
	
	scoreForm.submit();
	
	
});